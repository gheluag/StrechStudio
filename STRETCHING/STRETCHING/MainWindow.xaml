<Window
    x:Class="STRETCHING.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:STRETCHING"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StretchFlow"
    Width="1500"
    Height="1000"
    Icon="/Resources/logo.png"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Background="#2A503D">
            <StackPanel VerticalAlignment="Center">
                <Button
                    x:Name="mainBtn"
                    Margin="10"
                    Click="mainBtn_Click"
                    Content="Главная"
                    Style="{StaticResource GreenRoundedButton}" />
                <Button
                    x:Name="clientsBtn"
                    Margin="10"
                    Click="clientsBtn_Click"
                    Content="Клиенты"
                    Style="{StaticResource GreenRoundedButton}" />
                <Button
                    x:Name="tasksBtn"
                    Margin="10"
                    Click="tasksBtn_Click"
                    Content="Задачи"
                    Style="{StaticResource GreenRoundedButton}" />
                <Button
                    x:Name="sheduleBtn"
                    Margin="10"
                    Click="sheduleBtn_Click"
                    Content="Расписание"
                    Style="{StaticResource GreenRoundedButton}" />
                <Button
                    x:Name="borrowBtn"
                    Margin="10"
                    Content="Продажи"
                    Style="{StaticResource GreenRoundedButton}" />
                <Button
                    x:Name="trainersBtn"
                    Margin="10"
                    Click="trainersBtn_Click"
                    Content="Тренеры"
                    Style="{StaticResource GreenRoundedButton}" />
                <Button
                    x:Name="adminBtn"
                    Margin="10"
                    Click="adminBtn_Click"
                    Content="Администраторы"
                    Style="{StaticResource GreenRoundedButton}"
                    Visibility="Collapsed" />
            </StackPanel>
        </Grid>

        <Frame
            x:Name="mainFrame"
            Grid.Column="1"
            NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
