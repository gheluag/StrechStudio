<Page
    x:Class="STRETCHING.Pages.TasksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:STRETCHING.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TasksPage"
    Style="{StaticResource pageStyle}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#2A503D"
            Text="Задачи" />

        <!--  Список задач  -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="TasksList" Margin="0,0,0,20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,20"
                            Padding="16"
                            Background="White"
                            BorderBrush="#2A503D"
                            BorderThickness="1"
                            CornerRadius="12"
                            Effect="{DynamicResource ShadowEffect}">
                            <StackPanel>
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="#2A503D"
                                    Text="{Binding Title}" />

                                <TextBlock
                                    Margin="0,8,0,0"
                                    Foreground="Black"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />

                                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="#BBA276"
                                        Text="Выполнить до: " />
                                    <TextBlock Foreground="#BBA276" Text="{Binding Deadline, StringFormat={}{0:dd MMMM yyyy}}" />
                                </StackPanel>

                                <CheckBox
                                    Margin="0,10,0,0"
                                    Checked="CheckBox_CheckedChanged"
                                    Content="Выполнено"
                                    FontWeight="SemiBold"
                                    Foreground="#2A503D"
                                    IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                    Unchecked="CheckBox_CheckedChanged" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
