<Window
    x:Class="STRETCHING.Windows.EditClassWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:STRETCHING.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Редактировать занятие"
    Width="400"
    Height="600"
    Background="White"
    Icon="/Resources/logo.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#2A503D"
            Text="Редактирование занятия" />

        <TextBlock
            x:Name="ClassIdTextBlock"
            Grid.Row="2"
            Margin="0,0,0,15"
            FontWeight="SemiBold"
            Foreground="#BBA276" />

        <!--  Дата занятия  -->
        <TextBlock
            Grid.Row="3"
            Margin="0,0,0,5"
            Foreground="#2A503D"
            Text="Дата занятия:" />
        <DatePicker
            x:Name="ClassDatePicker"
            Grid.Row="4"
            Margin="0,0,0,15"
            HorizontalAlignment="Stretch"
            SelectedDateFormat="Short" />

        <!--  Время начала  -->
        <TextBlock
            Grid.Row="5"
            Margin="0,0,0,5"
            Foreground="#2A503D"
            Text="Время начала:" />
        <ComboBox
            x:Name="StartTimeComboBox"
            Grid.Row="6"
            Margin="0,0,0,15"
            HorizontalAlignment="Stretch" />

        <!--  Время окончания  -->
        <TextBlock
            Grid.Row="7"
            Margin="0,0,0,5"
            Foreground="#2A503D"
            Text="Время окончания:" />
        <ComboBox
            x:Name="EndTimeComboBox"
            Grid.Row="8"
            Margin="0,0,0,15"
            HorizontalAlignment="Stretch" />

        <!--  Направление  -->
        <TextBlock
            Grid.Row="9"
            Margin="0,0,0,5"
            Foreground="#2A503D"
            Text="Направление:" />
        <ComboBox
            x:Name="DirectionComboBox"
            Grid.Row="10"
            Margin="0,0,0,15"
            HorizontalAlignment="Stretch"
            DisplayMemberPath="Name_d" />

        <!--  Тренер  -->
        <TextBlock
            Grid.Row="11"
            Margin="0,0,0,5"
            Foreground="#2A503D"
            Text="Тренер:" />
        <ComboBox
            x:Name="TrainerComboBox"
            Grid.Row="12"
            Margin="0,0,0,15"
            HorizontalAlignment="Stretch"
            DisplayMemberPath="FullName" />

        <!--  Зал  -->
        <TextBlock
            Grid.Row="13"
            Margin="0,0,0,5"
            Foreground="#2A503D"
            Text="Зал:" />
        <ComboBox
            x:Name="HallComboBox"
            Grid.Row="14"
            Margin="0,0,0,25"
            HorizontalAlignment="Stretch"
            DisplayMemberPath="NameHall" />

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="15"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="120"
                Height="35"
                Margin="0,0,15,0"
                Click="SaveButton_Click"
                Content="Сохранить"
                Style="{StaticResource MainButton}" />
            <Button
                x:Name="CancelButton"
                Width="120"
                Height="35"
                Click="CancelButton_Click"
                Content="Отмена"
                Style="{StaticResource SecondaryButton}" />
        </StackPanel>
    </Grid>
</Window>
