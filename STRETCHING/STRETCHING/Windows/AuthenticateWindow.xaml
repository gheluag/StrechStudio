<Window
    x:Class="STRETCHING.Windows.AuthenticateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:STRETCHING.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Авторизация"
    Width="500"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="20" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="14"
            FontWeight="Bold"
            Text="Логин" />
        <!--  Логин  -->
        <TextBox
            x:Name="LoginTextBox"
            Grid.Row="2"
            Height="40"
            Margin="0,0,0,5"
            Padding="10"
            Background="White"
            BorderThickness="1"
            FontSize="14"
            Foreground="Black"
            PreviewKeyDown="Input_PreviewKeyDown" />

        <!--  Пароль  -->
        <TextBlock
            Grid.Row="3"
            FontSize="14"
            FontWeight="Bold"
            Text="Пароль" />
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="4"
            Height="40"
            Margin="0,0,0,5"
            Padding="10"
            Background="White"
            BorderThickness="1"
            FontSize="14"
            Foreground="Black"
            PreviewKeyDown="Input_PreviewKeyDown" />

        <!--  Кнопка "Войти"  -->
        <Button
            Grid.Row="6"
            Width="200"
            Click="Button_Click"
            Content="Войти"
            Style="{StaticResource GreenRoundedButton}" />
    </Grid>
</Window>
