<Window
    x:Class="STRETCHING.Windows.AddTrainerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:STRETCHING.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="550"
    Background="White"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="35" />
            <RowDefinition Height="20" />
            <RowDefinition Height="35" />
            <RowDefinition Height="20" />
            <RowDefinition Height="35" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- Фамилия -->
        <TextBlock Grid.Row="0" Margin="0,0,0,5" Foreground="#2A503D" Text="Фамилия:" />
        <Border Grid.Row="1" Margin="0,0,0,10" BorderBrush="#BBA276" BorderThickness="1" CornerRadius="6">
            <TextBox x:Name="LastNameTextBox" Padding="5" Background="Transparent" BorderThickness="0" />
        </Border>

        <!-- Имя -->
        <TextBlock Grid.Row="2" Margin="0,0,0,5" Foreground="#2A503D" Text="Имя:" />
        <Border Grid.Row="3" Margin="0,0,0,10" BorderBrush="#BBA276" BorderThickness="1" CornerRadius="6">
            <TextBox x:Name="FirstNameTextBox" Padding="5" Background="Transparent" BorderThickness="0" />
        </Border>

        <!-- Отчество -->
        <TextBlock Grid.Row="4" Margin="0,0,0,5" Foreground="#2A503D" Text="Отчество:" />
        <Border Grid.Row="5" Margin="0,0,0,10" BorderBrush="#BBA276" BorderThickness="1" CornerRadius="6">
            <TextBox x:Name="MiddleNameTextBox" Padding="5" Background="Transparent" BorderThickness="0" />
        </Border>

        <!-- Дата рождения -->
        <TextBlock Grid.Row="6" Margin="0,0,0,5" Foreground="#2A503D" Text="Дата рождения:" />
        <StackPanel Grid.Row="7" HorizontalAlignment="Center" Orientation="Horizontal">
            <StackPanel Margin="5">
                <ComboBox x:Name="DayComboBox" Width="50" Style="{StaticResource ModernComboBoxStyle}" />
                <TextBlock HorizontalAlignment="Center" Text="День" />
            </StackPanel>
            <StackPanel Margin="5">
                <ComboBox x:Name="MonthComboBox" Width="100" Style="{StaticResource ModernComboBoxStyle}" />
                <TextBlock HorizontalAlignment="Center" Text="Месяц" />
            </StackPanel>
            <StackPanel Margin="5">
                <ComboBox x:Name="YearComboBox" Width="65" Style="{StaticResource ModernComboBoxStyle}" />
                <TextBlock HorizontalAlignment="Center" Text="Год" />
            </StackPanel>
        </StackPanel>

        <!-- Специализации -->
        <TextBlock Grid.Row="8" Margin="0,0,0,5" Foreground="#2A503D" Text="Специализации:" />

        <!-- Основной список специализаций -->
        <Border Grid.Row="9" Margin="0,0,0,5" BorderBrush="#BBA276" BorderThickness="1" CornerRadius="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="MainSpecializationComboBox" 
                          Grid.Column="0"
                          Style="{StaticResource ModernComboBoxStyle}"
                          DisplayMemberPath="Name"
                          Margin="5"/>
            </Grid>
        </Border>

       
        <!-- Кнопки -->
        <StackPanel Grid.Row="11" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="SaveButton" Width="100" Height="30" Margin="0,0,10,0"
                    Click="SaveButton_Click" Content="Сохранить" Style="{StaticResource MainButton}" />
            <Button x:Name="CancelButton" Width="100" Height="30"
                    Click="CancelButton_Click" Content="Отмена" Style="{StaticResource SecondaryButton}" />
        </StackPanel>
    </Grid>
</Window>
